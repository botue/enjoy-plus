<authorized>
  <scroll-view enhanced show-scrollbar="{{false}}" scroll-y>
    <view class="form">
      <van-cell-group border="{{false}}" title="报修房屋">
        <van-cell
          value="{{houseInfo}}"
          value-class="{{houseInfo !== '请选择房屋信息' ? 'active-cell' : ''}}"
          bind:click="openHouseLayer"
          is-link
          border="{{false}}"
        />
      </van-cell-group>
      <van-cell-group border="{{false}}" title="报修信息">
        <van-cell
          title-width="100"
          title="维修项目"
          value-class="{{repairItemName !== '请选择维修项目' ? 'active-cell' : ''}}"
          bind:click="openRepairLayer"
          value="{{repairItemName}}"
          is-link
        />
        <van-field
          title-width="88"
          label="手机号码"
          type="number"
          model:value="{{mobile}}"
          placeholder="请输入联系电话号码"
        />
        <van-cell
          title-width="100"
          title="预约日期"
          value-class="{{appointment !== '请选择上门维修日期' ? 'active-cell' : ''}}"
          bind:click="openDateLayer"
          is-link
          value="{{appointment}}"
        />
        <van-cell use-label-slot title="问题描述">
          <van-field
            slot="label"
            border="{{false}}"
            autosize
            custom-style="padding: 0; font-size: 28rpx; min-height: 60rpx"
            type="textarea"
            model:value="{{description}}"
            placeholder-style="color: #c3c3c5;"
            placeholder="请填写报修内容，工作人员将快速帮您解决问题。"
          />
        </van-cell>
        <van-cell use-label-slot custom-style="padding-bottom: 0" title="问题附件" border="{{false}}">
          <view class="uploader" slot="label" style="margin-top: 20rpx;">
            <van-uploader preview-size="100" max-count="6" bind:after-read="afterRead" file-list="{{attachment}}" />
          </view>
        </van-cell>
      </van-cell-group>
    </view>
    <view class="toolbar" bind:tap="submitForm">
      <text class="enjoy-icon icon-repair"></text>
      <text class="button-text">提交报修</text>
    </view>
  </scroll-view>

  <!-- 房屋列表 -->
  <van-action-sheet
    bind:close="closeHouseLayer"
    bind:cancel="closeHouseLayer"
    bind:select="selectHouse"
    round
    show="{{ houseLayerVisible }}"
    actions="{{ houseList }}"
    cancel-text="取消"
    title="选择报修房屋"
  />

  <!-- 维修项目 -->
  <van-action-sheet
    bind:close="closeRepairLayer"
    bind:cancel="closeRepairLayer"
    bind:select="selectRepairItem"
    round
    show="{{ repairLayerVisible }}"
    actions="{{ repairItems }}"
    cancel-text="取消"
    title="选择维修项目"
  />

  <!-- 预约日期 -->
  <van-popup bind:close="closeDateLayer" round show="{{dateLayerVisible}}" position="bottom">
    <van-datetime-picker
      type="date"
      value="{{currentDate}}"
      min-date="{{minDate}}"
      bind:cancel="closeDateLayer"
      bind:confirm="selectDate"
    />
  </van-popup>
</authorized>
